<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/materias"
    android:orientation="vertical"
    android:background="#121212"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/regresar">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_arrow_back_ios_24"
                android:tint="#F5F5F5"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AtrÃ¡s"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:textColor="#F5F5F5"
                android:layout_marginLeft="-6dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="-35dp">

            <TextView
                android:id="@+id/textTituloDetalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre Materia"
                android:textSize="30sp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="55dp"
                android:textStyle="bold"
                android:textColor="#F5F5F5"
                android:layout_marginLeft="24dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_borrar_materia"
                android:layout_width="38dp"
                android:layout_height="38dp"
                app:cardBackgroundColor="@android:color/holo_red_dark"
                app:cardCornerRadius="100dp"
                app:cardElevation="4dp"
                android:layout_marginTop="55dp"
                android:layout_marginLeft="-70dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/baseline_delete_forever_24"
                        android:tint="#F5F5F5"
                        android:layout_marginLeft="-6dp"
                        android:layout_marginTop="5dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="24dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/baseline_calendar_month_24"
                android:tint="#00B8D4"
                android:layout_marginRight="10dp" />

            <TextView
                android:id="@+id/textHorarioDetalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Horario"
                android:textSize="18sp"
                android:textColor="#F5F5F5"
                android:layout_marginTop="2dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="24dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/baseline_person_24"
                android:tint="#00B8D4"
                android:layout_marginRight="10dp" />

            <TextView
                android:id="@+id/textMaestroDetalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profesor"
                android:textColor="#F5F5F5"
                android:textSize="18sp"
                android:layout_marginTop="1dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/baseline_numbers_24"
                android:tint="#00B8D4"
                android:layout_marginRight="10dp" />

            <TextView
                android:id="@+id/textAulaDetalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10"
                android:textColor="#F5F5F5"
                android:textSize="18sp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="45dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aula:"
            android:textColor="#F5F5F5"
            android:textSize="18sp"
            android:layout_marginTop="-24dp"
            android:layout_marginLeft="59dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tareas"
        android:textSize="20dp"
        android:textColor="#00B8D4"
        android:textStyle="bold"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="20dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_agregar_tarea"
        android:layout_width="357dp"
        android:layout_height="50dp"
        app:cardBackgroundColor="#00B8D4"
        app:cardCornerRadius="100dp"
        app:cardElevation="4dp"
        android:background="@drawable/bordes_redondos_2"
        android:layout_marginTop="330dp"
        android:layout_marginLeft="14dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agregar"
                android:textSize="20sp"
                android:textColor="#F5F5F5"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1F1F1F"
        app:itemIconTint="@color/selector_bottom_nav"
        app:itemTextColor="@color/selector_bottom_nav"
        app:menu="@menu/bottom_nav_menu" />
</LinearLayout>