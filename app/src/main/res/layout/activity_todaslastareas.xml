<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Sección de pendientes -->
        <TextView
            android:id="@+id/titulo_pendientes"
            android:text="Tareas Pendientes:"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#F5F5F5"
            android:layout_marginBottom="15dp"/>

        <LinearLayout
            android:id="@+id/contenedor_pendientes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp" />

        <!-- Sección de completadas -->
        <TextView
            android:id="@+id/titulo_completadas"
            android:text="Tareas Completadas:"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#F5F5F5"
            android:layout_marginBottom="15dp"/>

        <LinearLayout
            android:id="@+id/contenedor_completadas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </LinearLayout>
</ScrollView>
